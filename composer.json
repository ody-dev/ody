{
  "name": "ody/logger",
  "description": "logging integration for ODY Framework",
  "type": "library",
  "license": "MIT",
  "keywords": ["ody", "logging"],
  "authors": [
    {
      "name": "Ilyas Deckers",
      "email": "ilyas@ody.dev"
    }
  ],
  "require": {
    "php": ">=8.1",
    "psr/log": "^1.1|^2.0|^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.4",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "Ody\\Logger\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ody\\Logger\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs",
    "fix-style": "phpcbf"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}